{
  "name": "universal-i18n-solution",
  "description": "Universal i18n solution for static resource",
  "author": "Ken Berkeley <kenberkeley@foxmail.com>",
  "version": "0.1.0",
  "scripts": {
    "clean": "rimraf test/dist",
    "prebuild": "npm run clean && mkdirp test/dist/__build__",
    "build1": "browserify test/src/app1.js -o test/dist/__build__/app1.min.js",
    "build2": "browserify test/src/app2.js -o test/dist/__build__/app2.min.js",
    "build": "npm run build1 && npm run build2",
    "i18n": "node test/i18n.js",
    "test": "npm run build && npm run i18n",
    "posttest": "rimraf test/dist/__build__"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kenberkeley/universal-i18n-solution.git"
  },
  "keywords": [
    "i18n"
  ],
  "dependencies": {
    "fs-extra": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-debug": "^3.1.0",
    "gulp-replace": "^0.5.4",
    "recursive-readdir-sync": "^1.0.6",
    "sugar": "^2.0.4"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.0",
    "uglifyify": "^3.0.4"
  },
  "browserify": {
    "transform": [
      "uglifyify"
    ]
  },
  "license": "MIT"
}
